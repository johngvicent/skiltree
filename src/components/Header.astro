---
import Navbar from './Navbar.astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "ðŸ“š SkillTree ", 
  subtitle = "Tutoriales y recursos de aprendizaje gratuitos para desarrolladores" 
} = Astro.props;
---

<header>
  <div class="header-brand">
    <a href="/">
      <img src="/logo-skilltree-monocroma.png" alt="Skilltree Logo" class="icon" />
      <h1><span class="skill">Skill</span><span class="tree">Tree</span></h1>
      
    </a>
  </div>
  <div class="header-info">
    <p class="subtitle">{subtitle}</p>
  </div>
  <div class="header-nav">
    <Navbar />
  </div>
  
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    margin-bottom: 30px;
    padding: 20px;
    background: linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 100%);
    border-radius: 8px;
    border: 1px solid #333;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .header-brand {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
  }

  .header-brand a {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
  }

  header h1 {
    font-size: 2.5em;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
  }

  .icon {
    max-height: 2.5em;
    width: auto;
    color: #00d4ff;
    transition: transform 0.5s ease;
  }

  .header-brand:hover .icon {
    animation: spin 0.8s ease-in-out;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .skill {
    color: #ffffff;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  }

  .tree {
    color: #00d4ff;
    text-shadow: 0 0 10px rgba(0, 212, 255, 0.3);
  }

  .subtitle {
    color: #d2d2d2;
    font-size: 1.1em;
    font-weight: 500;
    margin: 0;
  }

  .header-nav {
    display: flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    header {
      flex-direction: column;
      text-align: center;
    }

    .header-info {
      display: none;
    }

    header h1 {
      font-size: 1.8em;
    }

    .icon {
      max-height: 1.8em;
    }

    .subtitle {
      font-size: 0.9em;
    }

    .header-nav {
      width: 100%;
    }
  }
</style>
