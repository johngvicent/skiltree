    autocomplete="off"
  />
  <button id="expandAllBtn">Expandir Todo</button>
  <button id="collapseAllBtn">Colapsar Todo</button>
</div>

<style>
  .search-container {
    margin: 20px auto;
    max-width: 800px;
    display: flex;
    gap: 10px;
    align-items: center;
    padding: 0 20px;
    flex-wrap: wrap;
  }

  #searchBox {
    flex: 1;
    min-width: 200px;
    padding: 12px 20px;
    font-size: 16px;
    background-color: #2a2a2a;
    border: 2px solid #444;
    border-radius: 25px;
    color: #e0e0e0;
    outline: none;
    transition: all 0.3s ease;
  }

  #searchBox:focus {
    border-color: #00d4ff;
    box-shadow: 0 0 15px rgba(0, 212, 255, 0.2);
  }

  button {
    padding: 10px 20px;
    font-size: 14px;
    background-color: #00d4ff;
    color: #1a1a1a;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  button:hover {
    background-color: #00a8cc;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 212, 255, 0.3);
  }

  button:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .search-container {
      flex-direction: column;
    }

    #searchBox {
      width: 100%;
    }

    button {
      width: 100%;
    }
  }
</style>
