  }

  .stats-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 3rem;
    text-align: center;
  }

  .stat-item {
    min-width: 120px;
  }

  .stat-number {
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
  }

  .stat-label {
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    margin-top: 0.25rem;
  }

  .copyright {
    margin-top: 3rem;
    text-align: center;
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.25rem;
  }

  .copyright p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .stats-container {
      gap: 2rem;
    }

    .stat-number {
      font-size: 1.5rem;
    }

    .stat-label {
      font-size: 0.75rem;
    }
  }
</style>
