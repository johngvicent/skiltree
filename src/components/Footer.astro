---
// Footer con estadísticas del sitio
interface Props {
  linkedInUrls?: {
    johnVicent?: string;
    pedroVial?: string;
    luisCervello?: string;
  };
}

const { 
  linkedInUrls = {
    johnVicent: "https://www.linkedin.com/in/johngonzalezvicent/",
    pedroVial: "https://www.linkedin.com/in/pedro-vial/",
    luisCervello: "https://www.linkedin.com/in/luis-cervell%C3%B3-mediel-a959b3364/"
  }
} = Astro.props;
---

<footer>
  <div class="footer-inner">

    <!-- Stats Bar -->
    <div class="stats-bar">
      <div class="stat-item">
        <span class="stat-number">500+</span>
        <span class="stat-label">Recursos Curados</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">24</span>
        <span class="stat-label">Categorías</span>
      </div>
      <div class="stat-item">
        <span class="stat-number accent">100% Gratis</span>
        <span class="stat-label">Acceso Abierto</span>
      </div>
    </div>

    <!-- Main grid -->
    <div class="footer-grid">

      <!-- Col 1: Brand -->
      <div class="footer-col brand-col">
        <div class="brand">
            <img src="/logo-skilltree-monocroma.png" alt="SkillTree Logo" class= width="50" height="50" />
          <h2 class="brand-name">Skill<span class="brand-accent">Tree</span></h2>
        </div>
        <p class="brand-desc">
          Nuestra misión es democratizar el acceso a la educación tecnológica mediante hojas de ruta interactivas y recursos gratuitos de alta calidad.
        </p>
      </div>

      <!-- Col 2: Navegación -->
      <div class="footer-col">
        <h4 class="col-title">Navegación</h4>
        <ul class="col-links">
          <li><a href="/">Home</a></li>
          <li><a href="/#mision-vision">Proyecto</a></li>
          <li><a href="/#equipo-scrum">Scrum Team</a></li>
        </ul>
      </div>

      <!-- Col 3: Equipo -->
      <div class="footer-col">
        <h4 class="col-title">Proyecto Creado Por</h4>
        <ul class="col-links">
          <li>
            <a href={linkedInUrls.johnVicent} target="_blank" rel="noopener noreferrer">
              <span class="material-icons-round link-icon">code</span>
              John G Vicent
            </a>
          </li>
          <li>
            <a href={linkedInUrls.luisCervello} target="_blank" rel="noopener noreferrer">
              <span class="material-icons-round link-icon">forum</span>
              Luis Cervelló
            </a>
          </li>
          <li>
            <a href={linkedInUrls.pedroVial} target="_blank" rel="noopener noreferrer">
              <span class="material-icons-round link-icon">volunteer_activism</span>
              Pedro Vial
            </a>
          </li>
        </ul>
      </div>

      <!-- Col 4: Legal -->
      <div class="footer-col">
        <h4 class="col-title">Legal</h4>
        <ul class="col-links">
          <li><a href="#">Términos de servicio</a></li>
          <li><a href="#">Política de Privacidad</a></li>
          <li><a href="#">Cookies</a></li>
        </ul>
      </div>

    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="copyright">
        &copy; 2026 SkillTree. El primer paso para aprender.
      </p>
    </div>

  </div>
</footer>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet" />

<style>
  footer {
    margin-top: 5rem;
    background-color: #1a1a1a;
    border-top: 1px solid rgba(255,255,255,0.07);
    padding-top: 3rem;
    padding-bottom: 2rem;
  }
  .footer-inner {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .stats-bar {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255,255,255,0.07);
    margin-bottom: 3rem;
    text-align: center;
    justify-items: center;
  }
  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    align-items: center;
  }
  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.2;
  }
  .stat-number.accent {
    color: #00d4ff;
    font-style: italic;
  }
  .stat-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #64748b;
    font-weight: 500;
  }
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
    text-align: center;
    justify-items: center;
  }
  .brand {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  .brand-icon {
    font-size: 1.25rem !important;
    color: #00d4ff;
    background: #1e1e1e;
    border: 1px solid #334155;
    border-radius: 6px;
    padding: 0.25rem;
  }
  .brand-name {
    font-size: 2.1rem;
    font-weight: 700;
    color: #ffffff;
  }
  .brand-accent {
    color: #00d4ff;
  }
  .brand-desc {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #94a3b8;
    margin: 0;
  }
  .col-title {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #e2e8f0;
    margin: 0 0 1.5rem 0;
  }
  .col-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
  }
  .col-links a {
    font-size: 0.875rem;
    color: #94a3b8;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s;
  }
  .col-links a:hover {
    color: #00d4ff;
  }
  .link-icon {
    font-size: 1rem !important;
  }
  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255,255,255,0.07);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    text-align: center;
  }
  .copyright {
    font-size: 0.75rem;
    color: #64748b;
    margin: 0;
  }
  .heart {
    color: #ff5f5f;
  }
  .social-links {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }
  .social-links a {
    color: #64748b;
    text-decoration: none;
    transition: color 0.2s;
    display: flex;
  }
  .social-links a:hover {
    color: #00d4ff;
  }
  .social-links .material-icons-round {
    font-size: 1.25rem;
  }
  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    .brand-col {
      grid-column: 1 / -1;
    }
  }
  @media (max-width: 600px) {
    .stats-bar { grid-template-columns: 1fr; gap: 1.25rem; }
    .footer-grid { grid-template-columns: 1fr; }
    .brand-col { grid-column: auto; }
    .footer-bottom { flex-direction: column; align-items: center; }
  }
</style>